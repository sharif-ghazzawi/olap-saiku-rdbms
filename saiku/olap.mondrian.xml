                    </SQL>
                </KeyExpression>
                <OrdinalExpression>
                    <SQL dialect="mysql">
                        MONTH(extractedDate)
                    </SQL>
                </OrdinalExpression>
            </Level>
            <Level name="Date" uniqueMembers="false" levelType="TimeDays">
                <KeyExpression>
                    <SQL dialect="mysql">
                        CAST(DAYOFMONTH(extractedDate) AS CHAR(2))
                    </SQL>
                </KeyExpression>
                <OrdinalExpression>
                    <SQL dialect="mysql">
